<!DOCTYPE html>
<html>
  <head>
    <title>GeoComplainer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="header">
      <%= render_navbar %>
    </div>
    
    <div class="container-fluid h-100" id="site-body">
      <div class="row h-100 justify-content-md-center">
        <div class="col-3" id="left-side-bar">
          <%= @left_side_bar %>
        </div>
      
        <div class="col-6 h-100" id="main-content">
          <% if notice %>
            <p class="alert alert-success"><%= notice %></p>
          <% end %>
          <% if alert %>
            <p class="alert alert-danger"><%= alert %></p>
          <% end %>
          <%= yield %>
        </div>
      
        <div class="col-3" id="right-side-bar">
          <%= @right_side_bar %>
        </div>
      </div>
    </div>
  </body>
</html>
