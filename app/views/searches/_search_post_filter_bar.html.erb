<div class="container h-100">
  <div class="row h-100 align-items-center justify-content-center mx-auto">
    <div class="col border border-dark rounded text-center py-3 mx-4">
      <div class="row my-3">
        <div class="col">
          <h3>Search</h3>
          <div class="btn-group-vertical" role="group">
            <%= submit_tag("Posts", form: "search_form",:class => 'btn btn-outline-dark') %>
            <%= submit_tag("Users", form: "search_form",:class => 'btn btn-outline-dark') %>
          </div>
        </div>
      </div>
      <div class="row my-3">
        <div class="col">
          <h3>By</h3>
          <div class="btn-group-vertical" role="group">
            <%= submit_tag("Title", form: "search_form",:class => 'btn btn-outline-dark') %>
            <%= submit_tag("Description", form: "search_form",:class => 'btn btn-outline-dark') %>
            <%= submit_tag("Author", form: "search_form",:class => 'btn btn-outline-dark') %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
