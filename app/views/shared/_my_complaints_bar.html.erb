<div class="container h-100">
  <div class="row h-100 align-items-center justify-content-center mx-auto">
    <div class="col border border-dark rounded text-center py-3 mx-4">
      <div class="row my-3">
        <div class="col">
          <h5>My Complaints</h5>
          <ul class="list-group list-group-flush">
            <!-- pending: filter by the user's posts, for now this is done with all the post -->
            <% Post.where('user_id == ?', current_user.id).all.each do |post|%>

            <li class="text-primary"><%= link_to post.title, post, :class => "text-primary" %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="row my-3">
        <div class="col">
          <h5>Followed Complaints</h5>
          <ul class="list-group list-group-flush">
            <!-- pending: filter by the user's followe posts, for now this is done with all the post -->
            <% @posts.each do |post| %>
            <li class="text-primary"><%= link_to post.title, post, :class => "text-primary" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
