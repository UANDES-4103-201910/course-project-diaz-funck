<div class="container">
  <div class="row border border-dark rounded">
    <div class="col-2 py-2">
      <div class="col text-center">
        <button type="button" class="btn btn-dark">^</button>
        <p class="h4"><%= post.votes.count %></p>
        <button type="button" class="btn btn-dark">v</button>
      </div>
    </div>
    <div class="col-10">
      <div class="row-2">
        <h4 class="text-truncate"><%= post.title %></h4>
        <h6>By <span><%= post.user.username %></span></h6>
      </div>
      <div class="row-10">
        <p class="block-with-text"><%= post.description %></p>
      </div>
    </div>
  </div>
</div>

