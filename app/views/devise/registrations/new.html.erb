<div class="container h-100">
  <div class="row h-100 align-items-center justify-content-center">
    <div class="col border border-dark rounded py-3 px-5">
      <h1 class="app-title mb-5">GeoComplainer</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :username %><br />
          <%= f.text_field :username %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :location_id %>
          <%= f.collection_select :location_id, Location.all, :id, :country_region, :include_blank => 'None' %>
        </div>

        <div class="field">
          <%= f.check_box :terms_of_service %> 
          <label class="form-check-label" >I agree with <span><a href="../legal">the Use Policy (AUP) and the Terms of Service (ToS)</a></span></label> <br />
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
