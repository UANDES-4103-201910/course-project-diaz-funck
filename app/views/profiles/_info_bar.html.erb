<div class="container h-100">
  <div class="row h-100 align-items-center justify-content-center mx-auto">
    <div class="col border border-dark rounded text-center py-3 mx-4">
      <div class="row my-3">
        <div class="col">
          <h3><%= user.username %></h3>
        </div>
      </div>
      <div class="row my-3">
        <div class="col">
          <h3><%= user.role.role_name %></h3>
        </div>
      </div>
      <div class="row my-3">
        <div class="col">
          <h3>Biography</h3>
        </div>
      </div>
      <div class="row my-3">
        <div class="col">
          <div class="col border rounded py-3 px-5">
            <%= user.user_profile.biography %>
          </div>
        </div>
      </div>
      <div class="row my-3">
        <div class="container">
          <div class="row">
            <div class="col-sm">
              <button type="button" class="btn btn-outline-dark">Geofence</button>
            </div>
            <div class="col-sm">
              <ul class="list-group list-group-flush">
                <a href="#" class="list-group-item">(Click to edit)</a>
                <a href="#" class="list-group-item">  <%= user.location.region %></a>
                <a href="#" class="list-group-item"> <%= user.location.country %></a>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
